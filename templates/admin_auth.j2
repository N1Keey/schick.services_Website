{% extends "_base.j2" %}
{% block styles %}
    {{ super() }}
    <style>
        .content{
            position: relative;
            left: 25px;
        }
    </style>
{% endblock %}
{% block title %} <title> Admin authentifizierung </title> {% endblock %}
{% block navbar %} {% endblock %}
{% block content %}
    <div class='content'>
        <h1>Admin Authentifizierung</h1>
        <title>Admin Auth</title>
        <h2>Geben Sie das Adminpassword ein</h2>
        <form method='POST'>
            <p><input type="password" id="pw" name="pw" placeholder="Passwort"></p>
            <p>
                <input type="submit" name="Weiter" value="Weiter"> 
            </p>
        </form>
        {% for message in get_flashed_messages() %}
        <div class="alert">{{ message }}<a href="/home">Home</a></div>
        {% endfor %}
    </div>
{% endblock %}